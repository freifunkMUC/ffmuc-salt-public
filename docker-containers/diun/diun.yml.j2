---

watch:
  workers: 20
  schedule: "42 3 * * *"

providers:
  docker:
    watchStopped: true
    watchByDefault: true

notif:
  slack:
    webhookURL: {{ salt["pillar.get"]("netbox:config_context:docker:diun:webhookURL", "") }}
    templateBody: |
      {% raw -%}
      Docker tag `{{ .Entry.Image }}` {{ if (eq .Entry.Status "new") }}newly added{{ else }}updated{{ end }}.
      {%- endraw %}
