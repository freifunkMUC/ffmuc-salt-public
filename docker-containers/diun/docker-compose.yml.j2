---

version: "3.8"

services:
  diun:
    image: crazymax/diun:4.21.0
    hostname: {{ grains.id.split('.')[0] }}-diun
    volumes:
      - "./data:/data"
      - "./diun.yml:/diun.yml:ro"
      - "/var/run/docker.sock:/var/run/docker.sock"
    environment:
      - "TZ=Europe/Berlin"
      - "LOG_LEVEL=info"
      - "LOG_JSON=false"
    restart: always
