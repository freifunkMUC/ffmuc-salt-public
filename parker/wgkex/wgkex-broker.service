[Unit]
Description=Wireguard Key Exchange Broker
Documentation=https://github.com/freifunkMUC/wgkex
After=network-online.target

[Service]
User=wgkex
WorkingDirectory=/srv/wgkex/wgkex-git
ExecStart=/srv/wgkex/wgkex-git/venv/bin/python3 -m flask run
Environment=FLASK_APP=wgkex/broker/app.py
Restart=on-failure

# Enable Logging
SyslogIdentifier=wgkex

# allow fetching metrics for wireguard
CapabilityBoundingSet=CAP_NET_ADMIN
AmbientCapabilities=CAP_NET_ADMIN

[Install]
WantedBy=multi-user.target
